{
	"name": "bookbuddies",
	"type": "module",
	"devDependencies": {
		"@types/bun": "latest",
		"@types/cli-progress": "^3.11.5",
		"@types/readline-sync": "^1.4.8",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.3.2"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"scripts": {
		"start:cli": "bun run src/cli/cli.ts",
		"start:gui": "bun run src/gui/gui.ts",
		"dev:cli": "bun eslint --fix && bun prettier . -w && bun run src/cli/cli.ts",
		"dev:gui": "bun eslint --fix && bun prettier . -w && bun run src/gui/gui.ts",
		"build:cli": "bun build --compile --minify --sourcemap src/cli/cli.ts",
		"build:gui": "bun build --compile --minify --sourcemap src/gui/gui.ts"
	},
	"dependencies": {
		"cli-progress": "^3.12.0",
		"colors": "^1.4.0",
		"hono": "^4.4.10",
		"jszip": "^3.10.1",
		"ora": "^8.0.1",
		"readline-sync": "^1.4.10"
	}
}
